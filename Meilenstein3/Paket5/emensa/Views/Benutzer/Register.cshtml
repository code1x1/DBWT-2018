@model emensa.Models.Benutzer

@{
    ViewData["Title"] = "Register";
}

<h2>Registeren</h2>

<div class="min-height-form-container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Register" id="msform">

                <!-- progressbar -->
                <ul id="progressbar">
                    <li class="active">Account Daten</li>
                    <li>Persönliche Daten</li>
                    <li>Auswahl Accounttyp</li>
                    <li>Accounttyp</li>
                </ul>


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset>
                    <!-- Account Daten -->
                    <div class="form-group">
                        <label asp-for="Nutzername" class="control-label"></label>
                        <input asp-for="Nutzername" class="form-control" />
                        <span asp-validation-for="Nutzername" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EMail" class="control-label"></label>
                        <input asp-for="EMail" class="form-control" />
                        <span asp-validation-for="EMail" class="text-danger"></span>
                    </div>            
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordRepeat" class="control-label"></label>
                        <input type="password" asp-for="PasswordRepeat" class="form-control" />
                        <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                    </div>
                    <input type="button" name="next" class="next action-button" value="Next"/>
                </fieldset>
                <fieldset>
                    <!-- Persönliche Daten -->
                    <div class="form-group">
                        <label asp-for="Vorname" class="control-label"></label>
                        <input asp-for="Vorname" class="form-control" />
                        <span asp-validation-for="Vorname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nachname" class="control-label"></label>
                        <input asp-for="Nachname" class="form-control" />
                        <span asp-validation-for="Nachname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Geburtsdatum" class="control-label"></label>
                        <input type="date" asp-for="Geburtsdatum" class="form-control" />
                        <span asp-validation-for="Geburtsdatum" class="text-danger"></span>
                    </div>
                    <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                    <input type="button" name="next" class="next action-button" value="Next"/>
                </fieldset>
                <fieldset>
                    <!-- Auswahl Accounttyp -->
                    <div class="form-group">
                        <label for="subnutzer_Gast">Gast: </label>
                        <input type="radio" id="subnutzer_Gast" name="subnutzer" value="Gast" checked />
                        <label for="subnutzer_Mitarbeiter">Mitarbeiter: </label>
                        <input type="radio" id="subnutzer_Mitarbeiter" name="subnutzer" value="Mitarbeiter" />
                        <label for="subnutzer_Student">Student: </label>
                        <input type="radio" id="subnutzer_Student" name="subnutzer" value="Student" />
                    </div>
                    <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                    <input type="button" name="next" class="next action-button" value="Next"/>
                </fieldset>
                <fieldset class="account-typ">
                    <!-- Accounttyp -->
                    <div class="Gast">
                        <label for="grund">Grund: </label>
                        <textarea id="grund" name="grund" cols="4" rows="6"></textarea>
                    </div>
                    <div class="Mitarbeiter">
                        <label for="buro">Büro: </label>
                        <input type="number" id="buro" name="buro" value="" />
                        <label for="tele">Telefon: </label>
                        <input type="number" id="tele" name="tele" value="" />
                        
                    </div>
                    <div class="Student">
                        <label for="matrikel">Matrikelnummer: </label>
                        <input type="number" id="matikel" name="matrikelnummer" value="" min="10000000" max="999999999" />
                        <label for="studiengang">Studiengang: </label>
                        <select name="studiengang">
                            <option value="ET">E Technik</option>
                            <option value="INF">Informatik</option>
                        </select>
                        
                    </div>
                    <input type="button" name="previous" class="previous action-button-previous" value="Previous"/>
                    <input type="submit" value="Registrieren" class="btn btn-default" />
                </fieldset>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@section Register {
    @{await Html.RenderPartialAsync("_RegisterScriptsPartial");}
}
