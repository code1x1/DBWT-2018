@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<div class="col-md-3">
    <form asp-controller="Benutzer" asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <fieldset class="border padding-alert">
            <legend>Login</legend>
                <div class="alert-danger margin-top-row">
                    @ViewData["LoginMessage"]
                </div>
            <div>
                <span class="input-group-addon" id="basic-addon1">
                    <span class="glyphicon glyphicon-user"></span>
                </span>
                @{
                    if(ViewData["LoginName"] != null){
                        <input type="text" name="Nutzername" class="form-control" placeholder='Username' value='@ViewData["LoginName"]' aria-describedby="basic-addon1">
                    }
                    else{
                        <input type="text" name="Nutzername" class="form-control" placeholder="Username" aria-describedby="basic-addon1">
                    }
                }
                
            <div class="text-danger block">
                @ViewData["NutzernameError"]
            </div>
            </div>
            <div>
                <span class="input-group-addon" id="basic-addon2">
                    <span class="glyphicon glyphicon-asterisk"></span>
                </span>
                <input type="password" name="Password" class="form-control" placeholder="Password" aria-describedby="basic-addon2">
            <div class="text-danger block">
                @ViewData["PasswordError"]
            </div>
            </div>
            <input type="submit" class="btn btn-default margin-top-row" name="anmelden" value="Anmelden" />
        </fieldset>       
    </form>
    <div class="alert-info margin-top-row padding-alert">
        <p>
            Melden Sie sich jetzt an um die wirklich viel günstigeren Preise für Mitarbeiter und Studenten zu sehen.
        </p>
    </div>
</div>